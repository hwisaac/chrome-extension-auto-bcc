{
    "name": "Barun Auto CC/BCC",
    "description": "gmail 에서 참조 수신자 필드 자동 추가",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/inject.js"]
        }
    ],
    "icons" : {
        "16" : "logo_small",
        "48" : "logo_small",
        "128" : "logo_small"
    }
}